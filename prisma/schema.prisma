generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id     String  @id
  name   String
  email  String  @unique
  orders Order[]
}

model Product {
  id    String @id
  name  String
  price Float
  stock Int

  OrderItem OrderItem[]
}

model Order {
  id         String @id
  customerId String
  total      Float

  items    OrderItem[]
  Customer Customer    @relation(fields: [customerId], references: [id])
}

model OrderItem {
  id        String @id
  orderId   String
  productId String
  quantity  Int
  unitPrice Float

  Order   Order   @relation(fields: [orderId], references: [id])
  Product Product @relation(fields: [productId], references: [id])
}
